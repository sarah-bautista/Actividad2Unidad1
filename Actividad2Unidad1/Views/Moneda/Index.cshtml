@{
}

@{
    ViewBag.Title = "Conversión de Moneda";
}

<h2>Conversión de DOP a USD/EUR</h2>

@using (Html.BeginForm("Convertir", "Moneda", FormMethod.Post))
{
    <label>Monto en DOP:</label>
    <br />
    <input type="number" step="0.01" name="montoDOP" required />
    <br />
    <br />

    <label>Selecciona la divisa:</label>
    <br />
    <select name="divisa" required>
        <option value="USD">USD (Dólares)</option>
        <option value="EUR">EUR (Euros)</option>
    </select>
    <br />
    <br />

    <input type="submit" value="Convertir" />
}
